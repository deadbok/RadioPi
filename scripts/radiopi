from radiopi.radiopi import RadioPi

def main():
    '''
    The entry point.
    '''
    try:
        radiopi = RadioPi()
        radiopi.main_loop()
    finally:
        radiopi.ui.close()
        radiopi.players.close()

if __name__ == '__main__':
    main()